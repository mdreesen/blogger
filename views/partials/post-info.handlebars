<article class="post">
            <div class="title">
                <a href="{{post_url}}" target="_blank" class="dashboardLinks">{{title}}</a>
                <span>({{format_url post_url}})</span>
            </div>
            <div class="postData">
                Author: {{user.username}} on {{format_date created_at}}
                |
                <a href="/post/{{id}}" class="dashboardLinks">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
        </article>