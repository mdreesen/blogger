<section>
  <div class="newPost">
    <h2>Create New Post</h2>

    <form class="new-post-form">
      <div class="titlePostField">
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div class="linkPostField">
        <label for="post-url">Link</label>
        <input id="post-url" name="post-url" />
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
</section>

{{#if posts.length}}
<section>
  <h2 class="yourPostHeader">Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <div class="postList">
      <li class="postListLI">
        {{> post-info post}}
        <a href="/dashboard/edit/{{post.id}}" class="dashboardLinks">Edit post</a>
      </li>
    </div>
    {{/each}}
  </ol>
</section>
{{/if}}

{{#if loggedIn}}
<script src="/javascript/add-post.js"></script>
{{/if}}